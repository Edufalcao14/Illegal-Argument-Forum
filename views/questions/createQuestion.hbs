{{#if connected}}
<section class="container-form">
    <div class="second-container-form">
        <div class="form-login-ask">
            <form action="/questions/createQuestion/add" method="post">
                <div class="title">Ask Your Question </div>
                <div class="input-container ic2">
                    <input type="text" class="input" name="titre" placeholder="Titre..." minlength="2">
                    <div class="cut cut-short"></div>
                    <label for="email" class="placeholder">Titre</label>
                </div>
                <div class="input-container ic2">
                    <label for="country" class="category-label">Category </label>
                    <select id="country" name="categorie">
                        {{#each categoriesTable}}
                        <option value={{this.id_categorie}}>{{this.nom_categorie}}</option>
                        {{/each}}
                    </select>
                    <div class="cut cut-short"></div>
                </div>
                <div> 
                    <h2 class="description-h2">Description</h2>
                      <textarea id="description" name="description" placeholder="Decription.. "
                    class="description-textearea"></textarea>
                </div>
         
                <button type="text" class="submit-ask-form">Ask Your Question</button>
            </form>
        </div>
    </div>
    </div>
    </div>
    {{#if min1Char}}
    <div class="modal-window" id="modal-window">
        <a href="/questions/createQuestion">
            <div class="modal">
                <button class="close-Modal" id="close-Modal"> X</button>
                <H3 class="modal-text" id="test5">Please enter minimun 3 letters for description </H4>
                  
            </div>
        </a>
    </div>
    {{/if}}
    {{/if}}